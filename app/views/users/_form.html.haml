.user.insert
    = form_for(@user) do |f|
        -@user.errors.each do |msg|
            %p= msg.last
        = f.label :name, "Nome"
        = f.text_field :name
        %br
        = f.label :email, "E-mail"
        = f.text_field :email
        %br
        = f.label :group_id, "Grupo do usuÃ¡rio"
        = f.select :group_id, options_from_collection_for_select(@grupos , 'id', 'name', @user.group.id), :include_blank => true
        %br
        = f.label :password, "Senha"
        = f.password_field :password
        %br
        = f.label :password_confirmation, "Confirmar Senha"
        = f.password_field :password_confirmation
        %br
        = f.submit "Salvar"

