<h2>Logar </h2>


  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <p><%= f.label :email %><br />
    <%= f.text_field :email %></p>

    <p><%= f.label :password, 'Senha' %><br />
    <%= f.password_field :password %></p>

    <% if devise_mapping.rememberable? -%>
      <p><%= f.check_box :remember_me %> <%= f.label :remember_me, "Relembrar" %></p>
    <% end -%>

    <p><%= f.submit "Entrar no sistema" %></p>
  <% end %>
